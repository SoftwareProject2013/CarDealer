                    <ListBox Height="100" HorizontalAlignment="Left" Margin="69,87,0,0" Name="vehiculeListBox" VerticalAlignment="Top" Width="138" SelectionChanged="vehiculeListBox_SelectionChanged" Grid.Column="1" />
